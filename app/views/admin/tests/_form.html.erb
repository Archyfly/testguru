<%= form_with model: [:admin, @test], local: true do |form| %>
  <%= render 'shared/errors', resource: @test %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :level %><br>
    <%= form.text_field :level %>
  </p><br>

  <p>
    Enter <%= form.label :test_duration %> (in minutes)<br>
    <%= form.text_field :test_duration %>
  </p>

  <p>
    <%= form.label :category_id %>:
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </p><br>

  <p><%= form.submit %></p>
<% end %>
