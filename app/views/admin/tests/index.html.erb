<h1><%=  t('.header') %></h1>
<p>
<button type="submit" class="btn"><%= link_to 'New test', new_admin_test_path %></button>
<button type="submit" class="btn"><%= link_to 'Badges', admin_badges_path %></button>
</p>
<%= render 'shared/errors', resource: @test %>
<table class="table table-striped table-dark" border = "1">
  <tr>

    <th class="sort-by-title pointer">
      <%= t('.title') %>
      <%= octicon 'arrow-up', class: 'text-succes hide' %>
      <%= octicon 'arrow-down', class: 'text-succes hide' %>
    </th>
    <th><%= t('.level') %></th>
    <th colspan="3"><%= t('.actions') %></th>
    <th><%= t('.questions_count') %></th>
  </tr>

<%= render @tests %>
</table>

