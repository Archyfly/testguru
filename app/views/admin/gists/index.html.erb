<h1>Show all Gists</h1>

<table class="table table-striped table-dark" border = "1">
  <tr>
    <th>user</th>
    <th>question</th>
    <th>gisturl</th>

  </tr>

  <% @gists.each do |gist| %>
    <tr>
      <td><%= User.find(gist.user_id).email %></td>
      <td><%= Question.find(gist.question_id).title %></td>
      <td><%= gist.gisturl %></td>
    </tr>
  <% end %>
</table>

