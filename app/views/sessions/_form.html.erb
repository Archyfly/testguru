<!-- Передаем в form_with в качестве ключа url так как мы не делаем модель для сессий
а в качестве значения этого ключа - передаем sessions_path, который ведет на
метод create в sessions_controller -->
<%= form_with url: sessions_path, local: true do |form| %>
  <%= flash_alert %>

  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email, id: :email %>
  </p>

  <p>
    <%= form.label :password %><br>
    <%= form.password_field :password, id: :password %>
  </p>

  <p><%= form.submit 'Enter '%></p>

<% end %>
